<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- Text -->

    <style name="textActivityTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textActivityTitle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textContentTitleStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textContentTitle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="textContentTitleStyleNormal" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textContentTitle</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textContentBodyStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textContentBody</item>
        <item name="android:textStyle">normal</item>
    </style>

    <style name="textContentBodyBoldStyle" parent="Widget.AppCompat.TextView">
        <item name="android:textSize">@dimen/textContentBody</item>
        <item name="android:textStyle">bold</item>
    </style>


    <!-- Button -->
    <style name="textButtonStyle" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:textSize">@dimen/textButton</item>
        <item name="android:padding">@dimen/mediumPadding</item>
        <item name="android:textColor">@color/white</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="buttonOutlineErrorStyle" parent="textButtonStyle">
        <item name="android:background">@drawable/roundrect_all_white_outline_error</item>
        <item name="android:textColor">@color/error</item>
    </style>

    <style name="buttonPrimaryStyle" parent="textButtonStyle">
        <item name="android:background">@drawable/roundrect_all_primary</item>
    </style>

    <!--Dialog Theme-->
    <style name="filterDialogTheme">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
        <item name="android:windowIsFloating">false</item>
    </style>

</resources>
