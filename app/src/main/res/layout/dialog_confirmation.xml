<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/roundrect_all_white"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/highPadding">

    <androidx.appcompat.widget.AppCompatImageView
        android:id="@+id/iv_dialog_logo"
        android:layout_width="@dimen/_192sdp"
        android:layout_height="@dimen/_130sdp"
        android:adjustViewBounds="true"
        tools:src="@drawable/ic_question" />

    <TextView
        style="@style/textContentTitleStyle"
        android:id="@+id/tv_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normalMargin"
        tools:text="adasdsdkfjghskfghsfkgadadada"
        android:textAlignment="center"/>

    <TextView
        style="@style/textContentBodyStyle"
        android:id="@+id/tv_dialog_subtitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/normalMargin"
        tools:text="eritoighkgjhdfghsoijhkghgs" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/highMargin"
        android:orientation="horizontal">

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonOutlineErrorStyle"
            android:id="@+id/btn_negative"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lowMargin"
            android:layout_weight="0.3"
            android:text="@string/title_common_cancel" />

        <androidx.appcompat.widget.AppCompatButton
            style="@style/buttonPrimaryStyle"
            android:id="@+id/btn_positive"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/lowMargin"
            android:layout_weight="0.7"
            android:text="@string/title_common_ok" />
    </LinearLayout>
</LinearLayout>
